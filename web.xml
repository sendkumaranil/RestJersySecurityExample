<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>RestJersySecurityExample</display-name>
  <servlet>
	<servlet-name>jersey-json-example-serlvet</servlet-name>
	<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
	<init-param>
		<param-name>com.sun.jersey.config.property.packages</param-name>
		<param-value>com.restsecurity.declarative.example.util</param-value>
	</init-param>
	<init-param>
		<param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
		<param-value>true</param-value>
	</init-param>
	<load-on-startup>1</load-on-startup>
  </servlet>
 
  <servlet-mapping>
	<servlet-name>jersey-json-example-serlvet</servlet-name>
	<url-pattern>/*</url-pattern>
  </servlet-mapping>
   
    
  <security-constraint>
    <display-name>Restricted GET Request</display-name>
    <web-resource-collection>
        <web-resource-name>Restricted GET request to student data</web-resource-name>
        <url-pattern>/rest/student/list</url-pattern>
        <url-pattern>/rest/mystudent/*</url-pattern>
        <http-method>GET</http-method>
    </web-resource-collection>
    <auth-constraint>
        <role-name>client</role-name>
        <role-name>tomcat</role-name>
    </auth-constraint>
    <user-data-constraint>
        <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
</security-constraint>
  
<login-config>
  <auth-method>BASIC</auth-method>  
</login-config> 

 	<security-role>     	
     	<role-name>client</role-name>
   	</security-role>

</web-app>